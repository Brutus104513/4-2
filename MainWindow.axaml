                Height = "300" 
                Width = "350"
                Stretch = "Fill"
                Margin = "0 10 0 0"> </Image>

<!-- Нижняя строка, левый столбец -->

            <DockPanel Grid.Row = "1" Grid.Column = "0" Margin = "0 5 0 0" Grid.ColumnSpan = "2">
                <TextBlock Margin = "5 5 0 0"> Tags </TextBlock>
                <TextBlock Margin = "15 5 0 0"> Tag 1 </TextBlock>
                <TextBlock Margin = "15 5 0 0"> Tag 2 </TextBlock>
                <TextBlock Margin = "15 5 0 0"> Tag 3 </TextBlock>
                <TextBlock Margin = "15 5 0 0"> Tag 4 </TextBlock>
                <TextBlock DockPanel.Dock = "Right" Margin = "0 0 5 0" FontStyle = "Italic" FontWeight = "Bold"> 4/5 </TextBlock>
                <TextBlock DockPanel.Dock = "Right" TextAlignment = "Right" Margin = "0 0 15 0"> Rate this article </TextBlock>
            </DockPanel>

        </StackPanel>

        <Border BorderThickness = "200" Grid.Row = "1" Grid.Column = "1" />

<!-- Средняя строка, правый столбец -->

        <StackPanel Grid.Row = "1" Grid.Column = "2" Margin = "20 0 0 0" Orientation = "Vertical">
